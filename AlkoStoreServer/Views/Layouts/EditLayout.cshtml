@{
    Layout = "_AdminPanelLayout";
    string modelName = ViewBag.Model.GetType().Name;
    int id = ViewBag.Model.ID;
    string actionUrl = "/" + modelName + "/edit/save/" + id;
}

<h2>Edit @modelName</h2>

